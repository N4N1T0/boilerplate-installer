---
import Layout from "@/layouts/Layout.astro";
import { personalizationFeatures } from "@/constants/site-data";
---

<Layout title="Welcome to Nanitos Personalized Astro Boilerplate">
	<section class="py-10 bg-gray-50 sm:py-16 lg:py-24">
		<div class="px-4 mx-auto sm:px-6 lg:px-8 max-w-7xl">
			<div class="max-w-2xl mx-auto text-center">
				<h2
					class="text-3xl font-bold leading-tight text-black sm:text-4xl lg:text-5xl"
				>
					Welcome to Nanito's Personalized Astro Boilerplate
				</h2>
				<p
					class="max-w-xl mx-auto mt-4 text-base leading-relaxed text-gray-600"
				>
					Personalization has the following <span
						class="text-blue-600 font-bold">Main</span
					> characteristics:
				</p>
			</div>

			<div
				class="grid grid-cols-1 gap-6 mt-12 lg:mt-16 xl:gap-10 sm:grid-cols-2 lg:grid-cols-3"
			>
				{
					personalizationFeatures.map((feature) => (
						<div class="overflow-hidden bg-white rounded shadow">
							<div class="p-8">
								<div class="flex items-center">
									<div class="mx-auto text-center tracking-wider">
										<p class="text-3xl font-semibold text-black">
											{feature.title}
										</p>
										<p class="mt-px text-gray-600">{feature.subtitle}</p>
									</div>
								</div>
								<p class="text-base leading-relaxed text-gray-600 mt-7 text-center">
									{feature.description}
								</p>
							</div>
						</div>
					))
				}
			</div>
		</div>
	</section>
</Layout>
